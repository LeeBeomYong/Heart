<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="AdoptRegDAO">
	<insert id="insert" parameterType="AdoptRegDTO">
		<selectKey resultType="int" keyProperty="adopt_reg_regno" order="BEFORE">
			select max(adopt_reg_regno)+1 from heartpet_adopt_reg
		</selectKey>
		insert into heartpet_adopt_reg 
			values
			(
			#{adopt_reg_regno} ,
			#{adopt_reg_userid} ,
			#{adopt_reg_animalno} ,
			<if test="adopt_reg_regdate != null">
				#{adopt_reg_regdate} ,
			</if>
			<if test="adopt_reg_regdate == null">
				'' ,
			</if>
			<if test="adopt_reg_duedate != null">
				#{adopt_reg_duedate} ,
			</if>
			<if test="adopt_reg_duedate == null">
				'' ,
			</if>
			
			'' ,
			'' 
			)
	</insert>
</mapper>