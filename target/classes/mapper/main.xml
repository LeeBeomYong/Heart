<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="QnaDAO">
	<select id="qna_list" parameterMap="java.util.Map" resultType="QnaDTO">
		select * from heartpet_board order by board_no
		 <choose>
            <when test="field.equals('title') and keyword != ''">where board_title like '%' || #{keyword} || '%'</when>
            <when test="field.equals('cont') and keyword != ''">where board_cont like '%' || #{keyword} || '%'</when>
            <when test="field.equals('writer') and keyword != ''">where board_writer like '%' || #{keyword} || '%'</when>
         </choose>
	</select>
	<select id="">
	</select>
</mapper>
